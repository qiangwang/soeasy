<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/news_item" >

    <ImageView
        android:id="@+id/news_item_photo"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_marginRight="10dip"
        android:contentDescription="@string/desc_accounts_photo"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/news_item_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textIsSelectable="true" />

        <TextView
            android:id="@+id/news_item_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:textColor="#000"
            android:textIsSelectable="true"
            android:textSize="15sp" />
        
        <LinearLayout 
            android:id="@+id/news_item_attachment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            />
        
    </LinearLayout>

</LinearLayout>